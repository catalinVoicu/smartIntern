@{
    ViewBag.Title = "Rules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container_12 rulesContainer">
    <div class="grid_3 rulesMenu" >
        <ul>
            <li class="subMenu" id="1">@*@Html.ActionLink("Target", "Target", "Home")*@<span>Target</span></li>
            <li class="subMenu" id="2">@*@Html.ActionLink("Teams", "Teams", "Home")*@<span>Teams</span></li>
            <li class="subMenu" id="3">@*@Html.ActionLink("Apps", "Apps", "Home")*@<span>Apps</span></li>
            <li class="subMenu" id="4">@*@Html.ActionLink("Submissions", "Submissions", "Home")*@<span>Submissions</span></li>
