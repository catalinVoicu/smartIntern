       $.ajax({
           type: "GET",
           url: '/Home/Target',
           data: {},
           success: function (data) {
               $('#displayRules').html(data);
               $('#1').css("background-color", "black");
           }
       });
       $("#1").click(function () {
           $.ajax({
               type: "GET",
               url: '/Home/Target',
               data: {},
               success: function (data) {
                   $('#displayRules').html(data);
                   $('#1').css("background-color", "black");
