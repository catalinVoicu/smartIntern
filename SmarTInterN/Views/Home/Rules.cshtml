            <li class="subMenu" id="7">@*@Html.ActionLink("Disclaimer", "Disclaimer", "Home"*@<span>Disclaimer</span></li>
        </ul>
    </div>
    <div class="grid_9">
        <div class="rulesContent " id="displayRules">
        </div>
    </div>
</div>
@section footer {
