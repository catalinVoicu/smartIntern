<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/Site.css")" rel="stylesheet" type="text/css" />
    
</head>

<body>
    <div class="container">
		<div class=" header">
            <div id="siglaAbsolute" class="left">
                 <span><a href="https://www.facebook.com/pages/ASAFF/53544058745?fref=ts"></a></span>
            </div>
            <div class="right signIn">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Sign out", "Logout", "Account");
                }
                else
                {
                    @Html.ActionLink("Sign In","LoginGet", "Account");
                }
			
            </div>
           
		</div>
		<div class=" menuBar">
			<ul>
				<li class="menuItem b1">@Html.ActionLink("HOME", "Index", "Home")</li>
				<li class="menuItem b2">
					ABOUT
					<div id="spirit" class="absoluteDropDown">
						<ul>
							<li class="menuRow "><span class="left">@Html.ActionLink("Why SmartIntern?", "TeasingYou", "Home")</span></li>
							<li class="menuRow "><span class="left">@Html.ActionLink("Details ", "TellingYouMore", "Home")</span></li>
						</ul>
					</div>
				</li>
				<li class="menuItem b3">
					CONTEST
					<div id="tournament" class="absoluteDropDown">
						<ul>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="menuRow "><span class="left">@Html.ActionLink("Rules", "Rules", "Home")</span></li>
							    <li class="menuRow "><span class="left">@Html.ActionLink("Judges", "Judges", "Home")</span></li>
                            }
                            else
                            {
                                <li class="menuRow "><span class="left">@Html.ActionLink("Register", "RegisterUser", "Account")</span></li>
                                <li class="menuRow "><span class="left">@Html.ActionLink("Rules", "Rules", "Home")</span></li>
							    <li class="menuRow "><span class="left">@Html.ActionLink("Judges", "Judges", "Home")</span></li>
                            }
						</ul>
					</div>
				</li>
				<li class="menuItem b4">@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="menuItem b5">
                        <span>PROFILE</span>
                        <div id="tournament" class="absoluteDropDown">
                            <ul>
                                <li class="menuRow "><span class="left">@Html.ActionLink("View Profile", "ViewProfile", "Home")</span></li>
                                <li class="menuRow "><span class="left">@Html.ActionLink("Add Member", "RegisterStudent", "Home")</span></li>
                                <li class="menuRow "><span class="left">@Html.ActionLink("Change password", "ChangePassword", "Account")</span></li>
                            </ul>
                        </div>
                    </li>
                }
                
				<li class="right b6" style="margin-top: 5px;">
					<span><a href="https://www.facebook.com/pages/ASAFF/53544058745?fref=ts"></a></span>
				</li>
                <li class="right b6" id="counterDisplay">
                        @{Html.RenderAction("LoginStatus", "Account");}
                </li>
			</ul>
		</div>
        <div class="content">
            @RenderBody()
        </div>
        <div id="footer">
            @{Html.RenderAction("Footer", "Home");}
        </div>
	</div>
    
    <script src="@Url.Content("~/Content/js/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    
    @RenderSection("footer", false)
</body>
</html>
